        <td scope="row"><?php echo e($empresa->EMP_PIE_DEE); ?></td>
        <td scope="row"><?php echo e($empresa->EMP_FIRMA_JEFE); ?></td>
        <td scope="row">
          <?php if($empresa->EMP_ESTADO !== 1): ?>
