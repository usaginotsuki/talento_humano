        <th scope="row">Estado Laboratorio</th> 
        <th scope="row">Acciones</th>
      </tr>       
    </thead>
    <tbody>
    <?php foreach($empresas as $empresa): ?>
      <tr>
        <td scope="row"><?php echo e($empresa->EMP_CODIGO); ?></td>
        <td scope="row"><?php echo e($empresa->EMP_NOMBRE); ?></td>
